<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaos.skynet.core.frame.api.data.mapper.KaosUserRoleMapper">
    <resultMap id="map" type="com.kaos.skynet.core.frame.api.data.entity.KaosUserRole">
        <id column="USER_CODE" jdbcType="VARCHAR" property="userCode" />
        <result column="ROLE" jdbcType="VARCHAR" property="role" />
    </resultMap>

    <sql id="item">
        USER_CODE,
        ROLE
    </sql>

    <select id="selectByMultiId" resultMap="map">
        SELECT
        <include refid="item" />
        FROM
            KAOS.KAOS_USER_ROLE
        WHERE
            USER_CODE = #{userCode}
            AND ROLE = #{role}
    </select>
</mapper>